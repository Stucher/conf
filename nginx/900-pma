server {
	listen   127.0.0.1:80;
	server_name pma;
	server_name pma.garona;

	root /usr/share/phpmyadmin;

	location / {
		index index.php;

		if ($request_filename ~ "\.php$") {
			fastcgi_pass   127.0.0.1:9000;
		}
	}

	location ~ \.(gif|jpg|jpeg|png|bmp|ico|css|js)$ {
		expires max;
	}
}


