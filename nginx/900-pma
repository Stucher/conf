server {
	listen   80;
	listen 127.0.0.1:80;

	server_name pma;
	server_name pma.garona;

	root /www/pma;

	location / {
		index index.php;

		allow 127.0.0.1;
		deny all;

		if ($request_filename ~ "\.php$") {
			fastcgi_pass   127.0.0.1:9000;
		}
	}

	location ~ \.(gif|jpg|jpeg|png|bmp|ico|css|js)$ {
		expires max;
	}
}


