[user]
	email = bupt1987@gmail.com
	name = 俊杰Jerry

[alias]
	st = status -s -u
	co = checkout
	df = diff --no-ext-diff
	dl = diff --no-ext-diff HEAD~1 HEAD
	ci = commit
	br = branch
	po = push origin
	ps = push
	pl = pull
	ig = update-index --assume-unchanged
	nig = update-index --no-assume-unchanged
	pa = "!f(){ git pull \"$@\" && git submodule update --init --recursive; }; f"

[color]
	ui = true

[push]
	default = current

[pull]
	#rebase = true

[diff]
    # external = ~/conf/script/git_diff_vim.sh
	algorithm = patience

[pager]
	diff =

[apply]
	whitespace = nowarn

[tig]
	tab-size = 4

[merge]
	tool = vimdiff

[color "status"]
	added = bold 121
	changed = bold 222
	untracked = bold 141

[core]
	safecrlf = true
	attributesfile = ~/.gitattributes

