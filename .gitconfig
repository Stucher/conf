[user]
	email = zhengkai@gmail.com
	name = Zheng Kai

[alias]
	st = status -s -u
	co = checkout
	df = diff --no-ext-diff
	dl = diff --no-ext-diff HEAD~1 HEAD
	ci = commit
	br = branch
	po = push origin
	ps = push
	pl = pull

[color]
	ui = true

[diff]
    external = ~/conf/script/git_diff_vim.sh

[pager]
	diff =

[tig]
	tab-size = 4

[merge]
	tool = vimdiff

[color "status"]
	added = bold 121
	changed = bold 222
	untracked = bold 141

