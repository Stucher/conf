alias emerge="sudo emerge"
alias update-grub="sudo grub-install --no-floppy /dev/sdc"
alias etc-update="sudo etc-update"
alias fpm="sudo /etc/init.d/php-fpm"

alias gi='git add ./`git rev-parse --show-cdup` && git ci -a'
alias gia='gi --amend'

# alias ls="ls -lha --color=auto"
alias ls="ls --color=auto"
alias ll="ls -lh"
alias la="ls -lA"
alias l="ls -CF"

alias date="date +'%Y-%m-%d %H:%M:%S'"

alias ssh-keygen="ssh-keygen -b 4096 -t rsa"

alias top="htop"

alias du1="du --max-depth=1 -h"
alias dus="du --max-depth=0 -h"

alias pwgen="pwgen -cns 75 40"

alias grep='grep --color=auto'

alias pss="ps aux | grep"

alias lynx="lynx -display_charset=UTF-8"

alias terror="sudo touch /tmp/php-error.txt;sudo chmod 666 /tmp/php-error.txt;tail -f /tmp/php-error.txt"

alias nginx="sudo /etc/init.d/nginx"
alias mysqld="sudo service mysql"
alias fpm="sudo /etc/init.d/php5-fpm"

alias so="source"

alias set644="(find . -type d -exec chmod 755 {} \;) && (find . -not -type d -exec chmod 644 {} \;) && (find . -type d | xargs chmod 755) && (find . -not -type d | xargs chmod 644)"

alias tunnel_test="curl http://www.facebook.com --socks5-hostname"

alias tmux='if [[ -z $TMUX && -z $TERMCAP ]]; then (tmux -2 attach -t default_login || tmux -2 new -s default_login); fi'

ex () {
	if [ -f $1 ] ; then
		case $1 in
			*.tar.bz2)   tar xjf $1        ;;
			*.tar.gz)    tar xzf $1     ;;
			*.bz2)       bunzip2 $1       ;;
			*.rar)       rar x $1     ;;
			*.gz)        gunzip $1     ;;
			*.tar)       tar xf $1        ;;
			*.tbz2)      tar xjf $1      ;;
			*.tgz)       tar xzf $1       ;;
			*.zip)       unzip $1     ;;
			*.Z)         uncompress $1  ;;
			*.7z)        7z x $1    ;;
			*)           echo "'$1' cannot be extracted via extract()" ;;
		esac
	else
		echo "'$1' is not a valid file"
	fi
}

